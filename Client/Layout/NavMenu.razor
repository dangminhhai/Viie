@attribute [Authorize]

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand cusorStyle" @onclick="HomeClicked">
            <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" @onclick="ShowAdminMenuContainer" style="cursor:pointer;" href="javascript:void()">
                        <div class="hstack gap-1">
                            <span class="bi bi-person-fill fs-3 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                            <span>Administration</span>
                        </div>
                    </NavLink>
                    <a class="nav-link p-2 text-white" style="margin-left:5rem; visibility:@CssStyle">
                        <div class="hstack" @onclick="UserClicked">
                            <span class="bi bi-people fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                            <span>Users</span>
                        </div>
                    </a>
                </div>
            </Authorized>
        </AuthorizeView>
        <div class="nav-item px-3" style="margin-top:@StructureMargin">
            <NavLink class="nav-link p-2" @onclick="ShowStructureContainer" style="cursor:pointer;" href="javascript:void()">
                <div class="hstack gap-1">
                    <span class="bi bi-backpack4-fill fs-3 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                    <span>Management</span>
                </div>
            </NavLink>
            <div class="nav-link p-2 text-white" style="margin-left:2rem; visibility:@StructureCssStyle">
                <ul class="list-group">
                    <li style="list-style:none" class="cusorStyle">
                        <a class="nav-link p-2" @onclick="LocationClicked">
                            <div class="hstack text-wrap">
                                <span class="bi bi-file-medical fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span class="fs-6">Location</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none" class="cusorStyle" @onclick="BusinessUnitClicked">
                        <a class="nav-link p-2">
                            <div class="hstack">
                                <span class="bi bi-substack fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Business Unit</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none" class="cusorStyle" @onclick="DepartmentClicked">
                        <a class="nav-link p-2">
                            <div class="hstack">
                                <span class="bi bi-substack fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Department</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none" class="cusorStyle" @onclick="JobPositionClicked">
                        <a class="nav-link p-2">
                            <div class="hstack">
                                <span class="bi bi-chevron-bar-contract fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Job Position</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <hr />
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="CountryClicked">
                            <div class="hstack">
                                <span class="bi bi-geo-alt fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Country</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="CityClicked">
                            <div class="hstack">
                                <span class="bi bi-pin-map-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>City</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="TownClicked">
                            <div class="hstack">
                                <span class="bi bi-geo fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Town</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <hr />
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="OvertimeTypeClicked">
                            <div class="hstack">
                                <span class="bi bi-stopwatch fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Overtime Type</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="SanctionTypeClicked">
                            <div class="hstack">
                                <span class="bi bi-x-octagon fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Sanction Type</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="VacationTypeClicked">
                            <div class="hstack">
                                <span class="bi bi-backpack3 fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Vacation Type</span>
                            </div>
                        </a>
                    </li>
                    <li style="list-style:none">
                        <hr />
                    </li>
                    <li style="list-style:none">
                        <a class="nav-link p-2 cusorStyle" @onclick="EmployeeClicked">
                            <div class="hstack">
                                <span class="bi bi-people-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem"></span>
                                <span>Employees</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>


<style>
    .cusorStyle {
        cursor: pointer;
    }
</style>
@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    public string StructureMargin { get; set; } = "-1.2rem";
    private string CssStyle = "hidden";
    public bool ShowHide { get; set; } = false;

    private void ShowAdminMenuContainer()
    {
        ShowHide = !ShowHide;
        if (ShowHide)
        {
            StructureMargin = "0";
            CssStyle = "visible";
        }
        else
        {
            StructureMargin = "-1.5rem";
            CssStyle = "hidden";
        }

    }

    private string StructureCssStyle = "hidden";
    public bool ShowHideStructure { get; set; } = false;
    private void ShowStructureContainer()
    {
        ShowHideStructure = !ShowHideStructure;
        if (ShowHideStructure)
            StructureCssStyle = "visible";
        else
            StructureCssStyle = "hidden";
    }

    //Location / BusinessUnit / Department / JobPosition
    void LocationClicked() => allState.LocationClicked();

    void BusinessUnitClicked() => allState.BusinessUnitClicked();

    void DepartmentClicked() => allState.DepartmentClicked();

    void JobPositionClicked() => allState.JobPositionClicked();


    //Country / City / Town
    void CountryClicked() => allState.CountryClicked();

    void CityClicked() => allState.CityClicked();

    void TownClicked() => allState.TownClicked();


    //VacationType / OvertimeType / SanctionType
    void VacationTypeClicked() => allState.VacationTypeClicked();

    void OvertimeTypeClicked() => allState.OvertimeTypeClicked();

    void SanctionTypeClicked() => allState.SanctionTypeClicked();


    // User
    void UserClicked() => allState.UserClicked();

    //Employee
    void EmployeeClicked() => allState.EmployeeClicked();
    void HomeClicked() => allState.EmployeeClicked();
}
